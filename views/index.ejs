<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vijay Sethupathi - Home</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #00ADB5;
            --secondary-color: #1F1F1F;
            --bg-color: #0B0F19;
            --card-color: #1A2238;
            --text-color: #EEEEEE;
        }

        body {
            background-color: var(--bg-color);
            color: var(--text-color);
            transition: all 0.3s;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .modern-card {
            background-color: var(--card-color);
            border-radius: 12px;
            padding: 20px;
            transition: transform 0.2s;
        }

        .modern-card:hover {
            transform: scale(1.03);
        }

        .card-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .hamburger-menu {
            position: fixed;
            top: 0;
            right: 0;
            height: 100%;
            width: 300px;
            background-color: var(--secondary-color);
            transform: translateX(100%);
            transition: transform 0.3s;
            z-index: 50;
        }

        .hamburger-menu.active {
            transform: translateX(0);
        }
    </style>
</head>
<body>
    <header class="p-4 shadow-lg flex justify-between items-center bg-gray-900">
        <h1 class="text-4xl font-bold text-cyan-400">Vijay Sethupathi</h1>
        <div class="flex items-center space-x-4">
            <% if (typeof user !== 'undefined' && user) { %>
                <a href="/users/search" class="flex items-center text-cyan-400 hover:text-cyan-300">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                    Search Users
                </a>
                <a href="/profile" class="text-cyan-400">My Profile</a>
            <% } %>
            <button id="menuBtn" class="text-3xl ml-4"><i class="fa-solid fa-bars"></i></button>
        </div>
    </header>

    <div id="menu" class="hamburger-menu">
        <button id="closeBtn" class="text-3xl p-4"><i class="fa-solid fa-times"></i></button>
        <nav class="mt-4 space-y-4 p-4">
            <a href="/" class="block text-lg text-cyan-400">Home</a>
            <a href="/about" class="block text-lg text-cyan-400">About</a>
            <a href="/movies" class="block text-lg text-cyan-400">Movies</a>
            <a href="/awards" class="block text-lg text-cyan-400">Awards</a>
            <a href="/message" class="block text-lg text-cyan-400">Message</a>
            <% if (typeof user !== 'undefined' && user) { %>
                <a href="/profile" class="block text-lg text-cyan-400">Profile</a>
                <a href="/users/search" class="block text-lg text-cyan-400">Search Users</a>
                <a href="/logout" class="block text-lg text-red-500">Logout</a>
            <% } else { %>
                <a href="/login" class="block text-lg text-cyan-400">Login</a>
                <a href="/register" class="block text-lg text-cyan-400">Register</a>
            <% } %>
        </nav>
    </div>

    <main class="p-6">
        <section>
            <h2 class="text-3xl font-bold mb-4">Trending Movies</h2>
            <div class="card-grid">
                <% if (movies && movies.length > 0) { %>
                    <% movies.slice(0, 10).forEach(movie => { %>
                        <div class="modern-card">
                            <h3><%= movie.title %></h3>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No Movies Available</p>
                <% } %>
            </div>
            <a href="/movies" class="text-cyan-400 mt-4 block">View All Movies</a>
        </section>

        <section class="mt-8">
            <h2 class="text-3xl font-bold mb-4">Popular Awards</h2>
            <div class="card-grid">
                <% if (awards && awards.length > 0) { %>
                    <% awards.slice(0, 10).forEach(award => { %>
                        <div class="modern-card">
                            <h3><%= award.name %></h3>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No Awards Available</p>
                <% } %>
            </div>
            <a href="/awards" class="text-cyan-400 mt-4 block">View All Awards</a>
        </section>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-gray-400 p-6 mt-12">
        <div class="container mx-auto flex flex-col md:flex-row justify-between items-center">
            <div class="mb-4 md:mb-0">
                <h2 class="text-2xl font-bold text-cyan-400">Vijay Sethupathi</h2>
                <p class="text-sm mt-2">Â© 2025 Vijay Sethupathi. All Rights Reserved.</p>
            </div>
            <div class="flex space-x-6">
                <a href="/" class="text-cyan-400 hover:text-white">Home</a>
                <a href="/about" class="text-cyan-400 hover:text-white">About</a>
                <a href="/movies" class="text-cyan-400 hover:text-white">Movies</a>
                <a href="/awards" class="text-cyan-400 hover:text-white">Awards</a>
                <a href="/message" class="text-cyan-400 hover:text-white">Message</a>
            </div>
            <div class="flex space-x-4 mt-4 md:mt-0">
                <a href="#" class="text-cyan-400 text-2xl"><i class="fab fa-facebook"></i></a>
                <a href="#" class="text-cyan-400 text-2xl"><i class="fab fa-twitter"></i></a>
                <a href="#" class="text-cyan-400 text-2xl"><i class="fab fa-instagram"></i></a>
                <a href="#" class="text-cyan-400 text-2xl"><i class="fab fa-youtube"></i></a>
            </div>
        </div>
    </footer>

    <script>
        const menuBtn = document.getElementById('menuBtn');
        const closeBtn = document.getElementById('closeBtn');
        const menu = document.getElementById('menu');

        menuBtn.addEventListener('click', () => {
            menu.classList.add('active');
        });

        closeBtn.addEventListener('click', () => {
            menu.classList.remove('active');
        });
    </script>
</body>
</html>